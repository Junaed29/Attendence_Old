<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AttendenceTable">

    <LinearLayout
        android:weightSum="5"
        android:background="#80DEEA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:clickable="true"
            android:layout_weight="2"
            android:id="@+id/dateTextViewId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="16204029"
            android:layout_gravity="center"
            android:textSize="17sp"
            android:textStyle="bold|italic|normal"
            android:textAlignment="center"
            />

        <RadioGroup
            android:id="@+id/sectionRadioGroupId"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <RadioButton
                android:checked="true"
                android:id="@+id/allRadioButtonId"
                android:background="#4bf1dd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="11sp"
                android:layout_height="wrap_content"
                android:text="ALL"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_margin="5dp"
                />
            <RadioButton
                android:id="@+id/evenRadioButtonId"
                android:background="#4bf1dd"
                android:layout_width="0dp"
                android:textSize="11sp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="EVEN"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_margin="5dp"
                />
            <RadioButton
                android:id="@+id/oddRadioButtonId"
                android:background="#4bf1dd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="11sp"
                android:layout_height="wrap_content"
                android:text="ODD"
                android:textColor="#000000"
                android:textStyle="bold"

                android:layout_margin="5dp"
                />

        </RadioGroup>
    </LinearLayout>

    <ListView
        android:id="@+id/listViewId"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#FFFFFF"
        android:dividerHeight="5dp"
        >
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:id="@+id/saveButtonId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:textStyle="normal|bold"
            android:textSize="25sp"
            android:background="#80DEEA"
            />
    </LinearLayout>

</LinearLayout>