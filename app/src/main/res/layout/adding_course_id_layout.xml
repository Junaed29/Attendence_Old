<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Add New Course Id : "
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <EditText
                android:paddingTop="10dp"
                android:id="@+id/newCourseIdTextEditorId"
                android:textAllCaps="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:inputType="textCapCharacters"
                android:textSize="15sp"
                android:hint="Enter Course Id"
                />
        </LinearLayout>
        <LinearLayout
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Type Of Course : "
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <EditText
                android:paddingTop="10dp"
                android:id="@+id/courseTypeTextEditorId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15sp"
                android:hint="Sessional OR Theory"
                />
        </LinearLayout>
        <LinearLayout
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Credits of Course : "
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <EditText
                android:paddingTop="10dp"
                android:id="@+id/courseCreditsTextEditorId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15sp"
                android:hint="Enter Course's Credits"
                android:inputType="number"
                />
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">
                <Button
                    android:id="@+id/saveNewCourseIdButtonId"
                    style="@style/Base.Widget.AppCompat.ActionButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EC6666"
                    android:text="Save New Course Id"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:textStyle="bold|normal" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>