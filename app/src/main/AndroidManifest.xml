<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myattendence">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/attendence_1"
        android:label="@string/app_name"
        android:roundIcon="@drawable/attendence_1"

        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.StoreAllDataActivity"></activity>
        <activity android:name=".activity.Modify_TableActivity" />
        <activity android:name=".activity.Create_TableActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activity.AttendenceTable" />
        <activity android:name=".activity.AllTablesActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.LogInActivity"
            android:theme="@style/AppTheme.NoActionBar"

            />
        <activity android:name=".activity.Registration_activity" />
        <activity android:name=".activity.Show_attendenceActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activity.FlashActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.Admin_Activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ShowCodesActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.NewCoursesActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.CourseDistributionActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>